<body style="background-color: blanchedalmond;">
    <h1>All product</h1>
    <h3><a href="insert" class="add ">Add New Product</a></h3><br>
    <style>
        .add {
            color: #8a5511;
        }

        th {
            font-size: 20px;
        }

        a:hover {
            color: #dd9c48;
            text-decoration: none;
        }

        .viewform {
            width: 150px;
        }
    </style>


    <table class="table">
        <thead>
            <tr>
                <th>ID Product</th>
                <th>Name</th>
                <th>Price (USD)</th>
                <th>Picture</th>
                <th style="text-align: center;">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{@index}}{{id}}</td>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td><img src="/images/{{picture}}" width="300" height="230" /></td>
                <td><a href="edit/{{ _id }}" class="btn btn-success">Edit</a></td>
                <td><a href="delete/{{ _id }}" class="btn btn-danger">Delete</a></td>
            </tr>
            {{/each}}
        </tbody>

